---
title: Art Of Siudmak - Contact
---

<section class="section columns has-background-dark" style='margin-bottom:0;'>
    <div class="container has-text-centered column is-10 is-offset-1">
        <h2 class="title has-text-white">Contact</h2>

        <form id="formContact">
            <div class="field is-horizontal">
                <div class="field-body">
                    <div class="field">
                        <p class="control has-icons-left">
                            <input id="name" class="input" type="text" placeholder="Name">
                            <span class="icon is-small is-left">
                                <i class="fas fa-user"></i>
                            </span>
                        </p>
                      <p class="help is-danger is-hidden" id="help_name">This field is required</p>
                    </div>
                    <div class="field">
                        <p class="control has-icons-left has-icons-right">
                            <input id="email" class="input" type="email" placeholder="Email">
                            <span class="icon is-small is-left">
                                <i class="fas fa-envelope"></i>
                            </span>
                        </p>
                        <p class="help is-danger is-hidden" id="help_email">This field is required</p>
                    </div>
                </div>
            </div>

            <div class="field is-horizontal">
                <div class="field-body">
                    <div class="field">
                        <div class="control">
                            <textarea id="comments" class="textarea" placeholder="Message us"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <p class="help is-danger is-hidden" id="help_comments">This field is required</p>

            <div class="field is-horizontal">
                <div class="field-body">
                    <div class="field">
                        <div class="control">
                            <button id="submitContact" class="button is-primary">
                                Send message
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

<% content_for :scripts do %>
  <%= javascript_include_tag "contact_form" %>
<% end %>